#custom defines loaded from Xresources
#action				var name			loadcolor				fallback
set_from_resource	$BorderFocus		i3wm.borderwin			#FF00FF
set_from_resource	$Border				i3wm.borderfocuswin		#FF00FF
set_from_resource	$wkspfocusborder	i3wm.wkspfocusborder	#FF00FF
set_from_resource	$wkspfocuscolour	i3wm.wkspfocuscolour	#FF00FF
set_from_resource	$wkspactiveborder	i3wm.wkspactiveborder	#FF00FF
set_from_resource	$wkspactivecolour	i3wm.wkspactivecolour	#FF00FF
set_from_resource	$wkspinactiveborder	i3wm.wkspinactiveborder	#FF00FF
set_from_resource	$wkspinactivecolour	i3wm.wkspinactivecolour	#FF00FF
set_from_resource	$wksptext			i3wm.wksptext			#FFFFFF
set_from_resource	$barbk				i3wm.barbk				#000000

#class					border	backgr.	text	indicacator		child_border
client.focused			#000000	#000000	#FFFFFF	$BorderFocus	$Border
client.unfocused		#000000 #000000 #FFFFFF $BorderFocus	$BorderFocus
client.focused_inactive	#000000 #000000	#FFFFFF	$BorderFocus	$BorderFocus
client.urgent			#000000	#000000	#FFFFFF	$BorderFocus	#FF0000
client.placeholder		#000000	#000000	#FFFFFF	$BorderFocus	#000000

#--General Rules--#
for_window [class="^.*"] border pixel 2
gaps inner 0
gaps outer 0
set $term --no-startup-id $TERMINAL
set $mod Mod4
floating_modifier Mod4


#---Window Rules---#
# General dropdown window traits. The order can matter.
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_*"] scratchpad show
for_window [class="discord"] move container to workspace 10
for_window [class="deluge"] move container to workspace 7
for_window [class="pia-openvpn"] move container to workspace 7
for_window [class="tw"] floating enable
for_window [instance="dropdown_tmuxdd"] resize set 625 450
for_window [instance="dropdown_dropdowncalc"] resize set 800 300
for_window [instance="dropdown_tmuxdd"] border pixel 3
for_window [instance="dropdown_dropdowncalc"] border pixel 2
for_window [instance="dropdown_*"] move position center

for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
for_window [window_role="GtkFileChooserDialog"] resize set 900 900
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [title="Default - Wine desktop"] floating enable

