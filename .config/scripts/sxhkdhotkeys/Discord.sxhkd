super + r
	$TERMINAL -e $FILE
super + m
	$TERMINAL -e ~/.config/scripts/startncmpcpp
super + shift + m
	~/.config/scripts/mousetoggle
super + n
	$TERMINAL -e newsboat
super + c
	$TERMINAL -e calcurse -D ~/.config/calcurse
#super + v
#	$TERMINAL -e nvim -c VimwikiIndex
super + shift + a
	~/.config/scripts/audiodevice.in
