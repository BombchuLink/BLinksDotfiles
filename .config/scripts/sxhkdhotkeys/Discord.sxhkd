

#normal key binds
k
	sleep 0.15; xdotool key Prior
j
	sleep 0.15; xdotool key Next
h
	sleep 0.1; xdotool key alt+Down
l
	sleep 0.1; xdotool key alt+Up
u
	sleep 0.1; xdotool key control+alt+Down
i
	sleep 0.1; xdotool key control+alt+Up
o
	sleep 0.1; xdotool key shift+Up
;
	sleep 0.1; xdotool key alt+Up
i
	~/.config/scripts/keyhot




#Hyper binds
hyper + t
	~/.config/scripts/keymirror
hyper + g
	maim -s | xclip -selection clipboard -t image/png
hyper + j
	sleep 0.1; xdotool key cent

# Super binds
super + Return
	$TERMINAL
super + space
	~/.config/scripts/keyhot
